import os

MAX_TASKS = 100
FILE_NAME = "todo.txt"
PRIORITY_LEVELS = ["High", "Medium", "Low"]

def load_tasks():
    if not os.path.exists(FILE_NAME):
        return []
    with open(FILE_NAME, "r") as file:
        tasks = []
        for line in file:
            parts = line.strip().split(" | ")
            if len(parts) == 3:
                task = {"name": parts[0], "deadline": parts[1], "priority": parts[2]}
                tasks.append(task)
        return tasks

def save_tasks(tasks):
    with open(FILE_NAME, "w") as file:
        for task in tasks:
            file.write(f"{task['name']} | {task['deadline']} | {task['priority']}\n")

def show_tasks(tasks):
    if not tasks:
        print("\nğŸ“‹ Your to-do list is empty.")
        return

    priority_order = {p: i for i, p in enumerate(PRIORITY_LEVELS)}
    sorted_tasks = sorted(tasks, key=lambda x: priority_order.get(x["priority"], 3))

    print("\nğŸ“‹ Your To-Do List (sorted by priority):")
    for task in sorted_tasks:
        print(f"- {task['name']} (Deadline: {task['deadline']}, Priority: {task['priority']})")

def add_task(tasks):
    if len(tasks) >= MAX_TASKS:
        print("âš ï¸ Cannot add more tasks. Maximum limit (100) reached.")
        return

    name = input("â• Enter task name: ").strip()
    if not name:
        print("âš ï¸ Task name cannot be empty.")
        return

    for task in tasks:
        if task["name"].lower() == name.lower():
            print("âš ï¸ Task already exists.")
            return

    deadline = input("ğŸ“… Enter deadline (YYYY-MM-DD): ").strip()
    priority = input("ğŸ”º Enter priority (High/Medium/Low): ").capitalize().strip()

    
    if priority not in PRIORITY_LEVELS:
        print("âš ï¸ Invalid priority. Use High, Medium, or Low.")
        return

    tasks.append({"name": name, "deadline": deadline, "priority": priority})
    save_tasks(tasks)
    print("âœ… Task added successfully!")

def remove_task(tasks):
    name = input("âŒ Enter the exact task name to remove: ").strip()
    for task in tasks:
        if task["name"].lower() == name.lower():
            tasks.remove(task)
            save_tasks(tasks)
            print(f"ğŸ—‘ï¸ Removed task: {task['name']}")
            return
    print("âš ï¸ Task not found.")

def main():
    tasks = load_tasks()
    while True:
        print("\nğŸ“Œ To-Do List Menu")
        print("1. View tasks")
        print("2. Add task")
        print("3. Remove task")
        print("4. Exit")

        choice = input("Choose an option (1-4): ")

        if choice == "1":
            show_tasks(tasks)
        elif choice == "2":
            add_task(tasks)
        elif choice == "3":
            remove_task(tasks)
        elif choice == "4":
            print("ğŸ‘‹ Exiting To-Do List. Goodbye!")
            break
        else:
            print("âš ï¸ Invalid choice. Please enter 1-4.")

if __name__ == "__main__":
    main()
